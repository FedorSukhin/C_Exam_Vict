<UserControl x:Class="C_Exam_Vict.Windows.ResultView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:C_Exam_Vict.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="ResultText" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Center"
                        FontFamily="Algerian" FontSize="30" Text="{Binding ResultString}"/>
            <TextBlock x:Name="QuestionCountText" HorizontalAlignment="Center" Grid.Row="3" TextWrapping="Wrap"  VerticalAlignment="Center"
                       FontFamily="Algerian" FontSize="24" Text="Questions count"/>
            <TextBlock x:Name="QuestionCount" HorizontalAlignment="Center"  Grid.Row="4" TextWrapping="Wrap"  VerticalAlignment="Center"
                        FontFamily="Algerian" FontSize="24" Text="{Binding QuestionCount}"/>
            <TextBlock x:Name="RightAnswersText" HorizontalAlignment="Center"  Grid.Row="5" TextWrapping="Wrap"  VerticalAlignment="Center"
                       FontFamily="Algerian" FontSize="24" Text="Right Answers Count"/>
            <TextBlock x:Name="RightAnswers" HorizontalAlignment="Center"  Grid.Row="6" TextWrapping="Wrap"  VerticalAlignment="Center"
                        FontFamily="Algerian" FontSize="24" Text="{Binding RightAnswersCount}"/>
            <Button x:Name="NextButton" Height="40" Width="150" HorizontalAlignment="Right"  Grid.Row="8" VerticalAlignment="Center"
                    FontFamily="Algerian" FontSize="24" Content="MainMenu" Command="{Binding BackToMainMenu}"/>
        </Grid>
    </Grid>
</UserControl>
